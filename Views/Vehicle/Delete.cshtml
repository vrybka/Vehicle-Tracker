@model VehicleTracker.Models.Vehicle
@*
    
*@
@{
}
<html>
<body class="ml-5 bg-gradient-to-br from-indigo-200 to-purple-100 via-cyan-100">
    <div class="flex flex-row place-content-center mt-24">
        <div class="ml-12 text-2xl font-extrabold text-center p-3 tracking-wide rounded-3xl border-4 border-indigo-800">Would you like to delete this Vehicle?</div>
    </div>
    <form asp-action="Delete" class="max-w-md mx-auto mb-64 mt-20">
    <input type="hidden" asp-for="Id" />
    <div class="relative z-0 w-full mb-5 group space-y-1">
        <div class="flex flex-col space-y-4">
            <div class="font-medium absolute text-sm text-gray-500 ">@Html.DisplayNameFor(model => model.Make)</div>
             <div class="mt-3 block py-2.5 px-0 w-full text-xl text-black-800 bg-transparent border-0 border-b-2 border-gray-300"> @Html.DisplayFor(model => model.Make)</div>
        </div>
    </div>
    <div class="relative z-0 w-full mb-5 group">
        <div class="flex flex-col space-y-4">
            <div class="font-medium absolute text-sm text-gray-500">@Html.DisplayNameFor(model => model.CarModel)</div>
            <div class="mt-3 block py-2.5 px-0 w-full text-xl text-black-800 bg-transparent border-0 border-b-2 border-gray-300 appearance-none ">@Html.DisplayFor(model => model.CarModel)</div>
        </div>
    </div>
    <div class="relative z-0 w-full mb-5 group">
        <div class="flex flex-col space-y-4">
            <div class="font-medium absolute text-sm text-gray-500">@Html.DisplayNameFor(model => model.Year)</div>
            <div class="mt-3 block py-2.5 px-0 w-full text-xl text-black-800 bg-transparent border-0 border-b-2 border-gray-300 appearance-none ">@Html.DisplayFor(model => model.Year)</div>
        </div>
    </div>
    <button type="submit" value="Delete"  class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Delete</button>
    <a asp-action="Index" class="ml-52 text-white bg-gradient-to-br from-green-400 to-blue-600 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-200 font-medium rounded-lg text-sm px-4 py-2.5 text-center me-2 mb-2">Back to Garage</a>
</form>
</body>
</html>